{
  "ConnectionStrings": {
    "Main": "postgresql://<neon-user>:<neon-password>@<neon-host>/<neon-db>?sslmode=require&channel_binding=require"
  },
  "Jwt": {
    "Issuer": "ProcesosAcademicos",
    "Audience": "ProcesosAcademicos.Web",
    "SigningKey": "REPLACE_WITH_STRONG_SECRET_IN_USER_SECRETS",
    "AccessTokenMinutes": 30
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://procesos-academicos.vercel.app"
    ]
  },
  "Database": {
    "ApplyMigrationsOnStartup": false
  },
  "Reports": {
    "StorageRootPath": "App_Data/reports",
    "DownloadTokenDays": 7,
    "RetentionDays": 30
  }
}
